
<html>
<head>

  {{> header}}

</head>

<body id="registration">

  <div class="container" id="registrationContainer">

    {{> menu}}


  <form action='/register' method="POST">
  <div id="usernamePasswordbox">
  
  <h1 class="register-title">Register</h1>
 
  <div class="form-inline">
    <label for="exampleInputEmail1">  </label>
    <input  class="smal" type="text" name="username" class="form-control" placeholder="Enter user name">

  </div>
   <div class="form-inline">
    <label for="exampleInputPassword1">  </label>
    <input class="smal"  type="password" name="password" class="form-control" placeholder="Enter a Password">
  </div>

  <button type="submit" class="submitButton">Create Account</button>

  {{#message}}
    <div class="alert alert-danger" role="alert">
        {{message}}
    </div>
  {{/message}}
 </div>
</form>

</div>

 {{> footer}}

</body>
</html>
